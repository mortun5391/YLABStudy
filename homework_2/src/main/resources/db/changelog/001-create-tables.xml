<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="1" author="your_name">

        <!-- Создание таблицы users -->
        <createTable tableName="users" schemaName="finance_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(50)"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>

        <!-- Создание таблицы transactions -->
        <createTable tableName="transactions" schemaName="finance_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)"/>
            <column name="date" type="DATE"/>
            <column name="description" type="TEXT"/>
            <column name="is_income" type="BOOLEAN"/>
        </createTable>

        <!-- Создание таблицы budgets -->
        <createTable tableName="budgets" schemaName="finance_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="budget" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="express" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="month" type="VARCHAR(255)"/>
        </createTable>

        <!-- Создание таблицы goals -->
        <createTable tableName="goals" schemaName="finance_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="target_amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="current_amount" type="DECIMAL(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="goal_name" type="VARCHAR(255)"/>
        </createTable>

        <!-- Добавление внешних ключей с каскадным удалением -->
        <addForeignKeyConstraint
                baseTableName="transactions"
                baseTableSchemaName="finance_schema"
                baseColumnNames="user_id"
                constraintName="fk_transaction_user"
                referencedTableName="users"
                referencedTableSchemaName="finance_schema"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="budgets"
                baseTableSchemaName="finance_schema"
                baseColumnNames="user_id"
                constraintName="fk_budget_user"
                referencedTableName="users"
                referencedTableSchemaName="finance_schema"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="goals"
                baseTableSchemaName="finance_schema"
                baseColumnNames="user_id"
                constraintName="fk_goal_user"
                referencedTableName="users"
                referencedTableSchemaName="finance_schema"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>